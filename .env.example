# Application
VITE_APP_NAME="BlogFolio Admin Dashboard"
VITE_APP_ENV=local
VITE_APP_VERSION=1.0.0

# API Configuration
# Local Laravel API domain (no trailing slash)
VITE_API_BASE_URL=http://dev.api.santanupradhan.in

# Authentication
VITE_AUTH_DRIVER=sanctum
VITE_AUTH_STORAGE=memory

# Pagination & Limits
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100

# Feature Flags
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_RBAC=false

# UI / UX
VITE_DASHBOARD_LAYOUT=sidebar
VITE_DEFAULT_THEME=light

# Logging & Debug
VITE_ENABLE_LOGS=true
VITE_LOG_LEVEL=debug

# Build & Runtime
VITE_BUILD_SOURCEMAPS=true
VITE_ENABLE_DEVTOOLS=true
